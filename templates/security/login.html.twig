{% extends 'default/index.html.twig' %}

{% block title %}Sign In{% endblock %}

{% block css %}
    <link href="{{ asset('css/login.css') }}" rel="stylesheet">
{% endblock %}


{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Sign in to TravelExperience</h1>
                <div class="account-wall">
                    <img class="profile-img" src="{{ asset('img/photo.png') }}" alt="">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form class="form-signin" action="{{ path('private_login') }}" method="post">
                        <input type="text" class="form-control" placeholder="Username" id="username" name="_username"
                               value="{{ last_username }}" required autofocus>
                        <input type="password" class="form-control" placeholder="Password" id="password"
                               name="_password"
                               required>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Sign in
                        </button>
                        <label class="checkbox pull-left">
                            <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                            Remember me
                        </label>
                        <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                    </form>
                </div>
                <a href="{{ path('private_register') }}" class="text-center new-account">Create an account </a>
            </div>
        </div>
    </div>
{% endblock %}