{% extends 'base.html.twig' %}

{% block title %}New Travel{% endblock %}

{% block header_js %}
    <script type="text/javascript" src="{{ google_maps }}"></script>
{% endblock %}

{% block content %}
    <div class="container" ng-app="GoogleMapsModule">
        <div class="row" ng-controller="googleMaps">
            <div class="col-sm-4">
                <h3>Add Travel</h3>
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="flash-notice">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {{ form_start(travelForm) }}
                {{ form_row(travelForm.title) }}
                {{ form_row(travelForm.description, {'attr': {'ng-model': 'description'}})  }}
                {{ form_row(travelForm.startAt) }}
                {{ form_row(travelForm.endAt) }}
                {{ form_row(travelForm.geoLocation.lat, {'attr': {'ng-model': 'lat'}}) }}
                {{ form_row(travelForm.geoLocation.lng, {'attr': {'ng-model': 'lng'}}) }}
                {{ form_row(travelForm.geoLocation.lat0, {'attr': {'ng-model': 'lat0'}}) }}
                {{ form_row(travelForm.geoLocation.lng0, {'attr': {'ng-model': 'lng0'}}) }}
                {{ form_row(travelForm.geoLocation.lat1, {'attr': {'ng-model': 'lat1'}}) }}
                {{ form_row(travelForm.geoLocation.lng1, {'attr': {'ng-model': 'lng1'}}) }}
                {{ form_widget(travelForm) }}

                <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(travelForm) }}
            </div>
            <div class="col-sm-8">
                <div id="map-canvas"></div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/angular/js/google-maps-scripts.js') }}"></script>
{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="{{ asset('css/main.css') }}" rel="stylesheet">
{% endblock %}