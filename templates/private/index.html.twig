{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <h1>MyArea</h1>
            <h2>Wellcome: language: {{ app.request.getLocale() }}</h2>
            {% for travel in travels %}
                <div class="col-sm-3">
                    <h3><a href="{{ path('travel', {'slug_travel': travel.slug}) }}">{{ travel.title }}</a></h3>
                    <div>
                        {% if travel.photo is empty %}
                            <img id="travel{{ travel.id }}" class="featurette-image img-responsive" data-src="holder.js/200x200/auto" alt="Travel photo">
                        {% else %}
                            <img id="travel{{ travel.id }}" src="{{ asset(travel.getWebPath()) }}" width="200" alt="">
                        {% endif %}
                    </div>
                    <div class="date-travel">
                        <a href="{{ path('travel', {'slug_travel': travel.slug}) }}">   {{ travel.startAt | date("d/m/Y")}} To {{ travel.endAt |date("d/m/Y")}}</a>
                    </div>
                    <div class="info-travel">
                        {{ travel.description }}
                    </div>
                    <div>
                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Likes {{ travel.starts }}
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Watch {{ travel.watch }}
                    </div>
                </div>
            {% else %}
                <div>Empty Travels</div>
            {% endfor %}
        </div>

    </div>
{%  endblock %}